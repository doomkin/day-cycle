<background>
    <!-- Этот процесс начинается в 4 часа утра -->
    <starttime>
        <year>2018</year>
        <month>05</month>
        <day>22</day>
        <hour>4</hour>
        <minute>00</minute>
        <second>00</second>
    </starttime>

    <!-- Встаём вместе с солнцем в 4 часа утра в течение 2 часов -->
    <static>
        <duration>7200.0</duration>
        <file>/usr/share/backgrounds/day-cycle/1_morning.jpg</file>
    </static>

    <!-- Утро начинается в 6 часов, длится в течение 5 часов и заканчивается в 11 часов -->
    <transition type="overlay">
        <duration>18000.0</duration>
        <from>/usr/share/backgrounds/day-cycle/1_morning.jpg</from>
        <to>/usr/share/backgrounds/day-cycle/3_day.jpg</to>
    </transition>

    <!-- День начинается в 11 часов, длится в течение 6 часов и заканчивается в 17 часов -->
    <static>
        <duration>21600.0</duration>
        <file>/usr/share/backgrounds/day-cycle/3_day.jpg</file>
    </static>

    <!-- Вечер начинается в 17 часов, длится в течение 5 часов и заканчивается в 22 часа -->
    <transition type="overlay">
        <duration>18000.0</duration>
        <from>/usr/share/backgrounds/day-cycle/3_day.jpg</from>
        <to>/usr/share/backgrounds/day-cycle/5_night.jpg</to>
    </transition>

    <!-- Ночь начинается в 22 часа, длится в течение 6 часов и заканчивается в 4 часа -->
    <transition type="overlay">
        <duration>21600.0</duration>
        <from>/usr/share/backgrounds/day-cycle/5_night.jpg</from>
        <to>/usr/share/backgrounds/day-cycle/1_morning.jpg</to>
    </transition>

</background>
